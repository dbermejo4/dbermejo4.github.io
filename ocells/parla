let mic;
function setup() {
  createCanvas(1000, 1000);
  mic=new p5.AudioIn();
}

function draw() {
  let vol=min.getLevel
  background(200);
  let h=map(vol,0,1,0,300)
  fill(120);
  beginShape();
  vertex(500,0);
  vertex(900,150)+h;
  vertex(500,250);
  vertex(900,350)+h;
  vertex(500,500);
  vertex(450,900);
  vertex(200,900);
  vertex(150,500);
  vertex(0,150);
  endShape(CLOSE);
